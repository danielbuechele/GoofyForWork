{
  "name": "gooft-for-work",
  "version": "1.0.0",
  "description": "A desktop chat client for Workplace by Facebook",
  "main": "app/src/main.js",
  "scripts": {
    "lint": "eslint ./app",
    "postinstall": "install-app-deps",
    "start": "node ./env.js && electron ./app --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist": "node ./env.js && build -m --x64",
    "release": "npm run dist"
  },
  "repository": "https://github.com/danielbuechele/GoofyForWork",
  "keywords": [
    "Facebook",
    "Workplace",
    "chat",
    "messenger",
    "goofy"
  ],
  "author": "Daniel BÃ¼chele",
  "license": "MIT",
  "dependencies": {
    "@sep/eslint-config-sep": "^1.0.14",
    "electron": "^1.4.1",
    "electron-builder": "^10.8.0"
  },
  "build": {
    "productName": "Goofy for Work",
    "icon": "./icon/AppIcon",
    "appId": "com.goofyapp.work",
    "win": {
      "target": ["zip"],
      "iconUrl": "https://"
    },
    "mac": {
      "target": ["zip"]
    },
    "publish": ["github"]
  }
}
